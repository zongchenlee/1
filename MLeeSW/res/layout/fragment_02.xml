<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".Main" >

    <TextView
        android:id="@+id/main_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dip"
        android:text="@string/main_text"
        android:textColor="#FFA500"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="5dip" >

        <ImageView
            android:id="@+id/main_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="@string/contentDescription"
            android:padding="5dip"
            android:src="@drawable/main_img1_selector" />

        <ImageView
            android:id="@+id/main_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="@string/contentDescription"
            android:padding="5dip"
            android:src="@drawable/main_img2_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="5dip" >

        <ImageView
            android:id="@+id/main_image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="@string/contentDescription"
            android:padding="5dip"
            android:src="@drawable/main_img3_selector" />

        <ImageView
            android:id="@+id/main_image4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="@string/contentDescription"
            android:padding="5dip"
            android:src="@drawable/main_img4_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="5dip" >

        <ImageView
            android:id="@+id/main_image5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="@string/contentDescription"
            android:padding="5dip"
            android:src="@drawable/main_img5_selector" />

        <ImageView
            android:id="@+id/main_image6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="@string/contentDescription"
            android:padding="5dip"
            android:src="@drawable/main_img6_selector" />
    </LinearLayout>

</LinearLayout>